{
  "title": "Trading SLOs",
  "tags": ["slos", "aether"],
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "Policy API Latency p95",
      "description": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"policy-service\", status_code=~\"2..\"}[5m])) by (le, method)) * 1000",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"policy-service\", status_code=~\"2..\"}[5m])) by (le, method)) * 1000",
          "legendFormat": "{{method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 200 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Risk API Latency p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"risk-service\", status_code=~\"2..\"}[5m])) by (le, method)) * 1000",
          "legendFormat": "{{method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 200 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "OMS Latency p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(oms_order_latency_seconds_bucket[5m])) by (le, account_segment, symbol_tier, transport)) * 1000",
          "legendFormat": "{{symbol_tier}}/{{account_segment}}/{{transport}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 350 },
              { "color": "red", "value": 500 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Market Data Freshness",
      "targets": [
        {
          "expr": "time() - max(risk_marketdata_latest_timestamp_seconds) by (service)",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 60 },
              { "color": "red", "value": 120 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "OMS Latency p99 (Early Warning)",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(oms_order_latency_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 150 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "WebSocket Delivery p99",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(ws_delivery_latency_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 250 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Kill Switch Response",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(kill_switch_response_seconds_bucket[5m])) by (le, status))",
          "legendFormat": "{{status}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 45 },
              { "color": "red", "value": 60 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Model Canary Promotion Duration",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(model_canary_promotion_duration_minutes_bucket[30m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "min",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 30 },
              { "color": "red", "value": 45 }
            ]
          }
        },
        "overrides": []
      }
    }
  ]
}
